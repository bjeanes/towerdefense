<table border="0" cellspacing="0" cellpadding="0">
  <tr><th>Player</th><th>(Income):</th><th>Lives</th></tr>
  <% users.each do |user| %>
    <tr>
      <td><span style="color:#<%= user.colour %>"><%= user %></span></td>
      <td>(<%= user.income %>):</td>
      <td><%= user.lives %></td>
    </tr>
  <% end %>
</table>